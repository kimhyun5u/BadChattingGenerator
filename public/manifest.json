{
  "name": "악질채팅생성기",
  "version": "1.0.0",
  "description": "진정한 악질들을 위한 프로그램",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["*://*/*"],
  "permissions": ["tabs", "cookies", "storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["template.html", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

{
  "name": "악질채팅생성기",
  "version": "1.0.0",
  "description": "진정한 악질들을 위한 프로그램",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "image/128.png",
      "48": "image/128.png",
      "128": "image/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"]
    }
  ]
}
